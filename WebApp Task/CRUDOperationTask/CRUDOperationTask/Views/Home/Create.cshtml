@model CRUDOperationTask.Models.Product
@{
    ViewBag.Title = "Create";
}

<div class="card" style="width:60%; margin:auto;">
    <div class="card-header bg-dark text-white">
        <h5>Create New</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Category)
                        @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Category)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Color)
                        @Html.TextBoxFor(m => m.Color, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Color)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.UnitPrice)
                        @Html.TextBoxFor(m => m.UnitPrice, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UnitPrice)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.AvailableQuantity)
                        @Html.TextBoxFor(m => m.AvailableQuantity, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.AvailableQuantity)
                    </div>
                </div> 
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        }
    </div>
</div>
